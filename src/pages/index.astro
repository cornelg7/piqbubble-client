---
import Layout from '../layouts/Layout.astro';
import VariableColorPageLayout from '../layouts/VariableColorPageLayout.astro';
import PageContent from '../components/PageContent.astro';
import { isLight, isLightSubscribe } from '../utils/General.utils';

let light = isLight.get();
isLightSubscribe((value: boolean) => {
	console.log('isLight changed', value);
})
---

<Layout client:load title="Welcome to Astro.">
	<VariableColorPageLayout light={light}>
		<PageContent light={light}/>
	</VariableColorPageLayout>
</Layout>

<style lang="scss">
	@import "../styles/global";

</style>
